source src_layers_de : layers
{
    sql_query = \
        SELECT \
            bgdi_id::bigint as id \
            , '<b>'||kurzbezeichnung||'</b>' as label \
            , 'layer' as origin \
            , remove_accents(kurzbezeichnung) as title \
            , remove_accents(volltextsuche) as detail \
            , bod_layer_id as layer \
            , 'de' as lang \
            , topics as topics \
            , staging as staging \
            , bgdi_id::bigint as id \
        from \
            re3.view_bod_layer_info_de 
}

