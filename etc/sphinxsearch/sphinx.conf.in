{
    port = 9312
    log = /var/www/vhosts/service-sphinxsearch/logs/searchd.log
    query_log = /var/www/vhosts/service-sphinxsearch/logs/query.log
    pid_file = /var/run/sphinxsearch/searchd.pid
    dist_threads = 3
    read_timeout = 5
    max_children = 90
    max_matches = 10000
}
